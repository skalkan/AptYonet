<!DOCTYPE html>
<html>
<head>
    <base href="/">
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />

</head>
<body>
    <header class="navbar navbar-inner navbar-fixed-top">
        <nav class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="logo" src="images/codewithdanlogo.png" alt="logo" />
                <div>
                    <a href="/home" class="app-title">Akıllı Apartman Yönetimi</a>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="navbar navbar-fixed-bottom">
            <div class="navbar-inner footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            Developed by <a href="http://twitter.com/skalkan" target="_blank">@@Serdar Kalkan</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <form asp-antiforgery="true"></form>

    <!-- Scripts generated by running the Angular CLI `ng build` in the Client folder -->
    <script type="text/javascript" src="dist/runtime.js"></script>
    <script type="text/javascript" src="dist/polyfills.js"></script>
    <script type="text/javascript" src="dist/styles.js"></script>
    <script type="text/javascript" src="dist/vendor.js"></script>
    <script type="text/javascript" src="dist/main.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
